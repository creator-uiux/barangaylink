{
  "name": "barangaylink/php-app",
  "description": "BarangayLink - Digital Barangay Governance Platform",
  "type": "project",
  "version": "1.0.0",
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "ext-pdo": "*",
    "ext-pdo_mysql": "*",
    "ext-mbstring": "*",
    "ext-json": "*",
    "laravel/framework": "^11.0",
    "laravel/tinker": "^2.9",
    "laravel/breeze": "^2.0",
    "guzzlehttp/guzzle": "^7.2",
    "laravel/sanctum": "^4.0",
    "doctrine/dbal": "^4.0"
  },
  "require-dev": {
    "php": "^8.1",
    "fakerphp/faker": "^1.9.1",
    "laravel/pint": "^1.0",
    "laravel/sail": "^1.18",
    "mockery/mockery": "^1.4.4",
    "nunomaduro/collision": "^8.0",
    "phpunit/phpunit": "^11.0.1",
    "spatie/laravel-ignition": "^2.0"
  },
  "scripts": {
    "post-install-cmd": [
      "@php -r \"echo 'BarangayLink installation complete!\\n';\""
    ],
    "post-update-cmd": [
      "@php -r \"echo 'BarangayLink update complete!\\n';\""
    ],
    "check-db": [
      "@php -r \"echo 'Checking database connection...\\n';\"",
      "@php -f check-db.php"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "php-http/discovery": true
    },
    "platform": {
      "php": "8.1"
    }
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeders/"
    },
    "files": [
      "app/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "dont-discover": []
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
